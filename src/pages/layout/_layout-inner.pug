//- Подключаем конфиг с переменными
block config
	include _config.pug

//- Подключаем компоненты с миксинами
include ../../components/button/button


doctype html
html(lang="ru-RU")
	head
		include _head.pug
		block title 
			title #{headTitle}

		//css
		block cssLinks
			link(rel="stylesheet" href=cssPath+"/main.css")

	body
		
		// Шапка
		
		header.l-header.header
			include _header-inner.pug

		// Контент
		main.l-content-inner
			.b-container
				.l-content-flex
					aside.l-aside.j-aside
						include ../../components/asideMenu/asideMenu
					section.l-section
						.b-breadCrumbs
							a(href="#") Главная
							span.b-breadCrumbs__delimiter |
							span #{breadCrumbs}
						.b-main-title.b-titleTwo.bgLinearRed
							h1 #{headTitle}
						.b-section-content
							block content

		// Подвал
		footer.l-footer.footer
			include _footer.pug

		// Иконки фиксированные
		include ../section/fixedIcon

		// Попап
		include ../section/popup

		// Мобильное меню
		include ../../components/mobileMenu/mobileMenu

		// Темная подложка
		include ../../components/overlay/overlay
					
		// script
		block scripts
			script(src="./js/app.min.js")
